@model IEnumerable<PF6_Team1_DotNetAssignment.Models.Project>

    ViewData["Title"] = "Project";
    Layout = "_Layout2";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - PF6_Team1</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css?h=5f8c8b7f9424a306c9dd1ceb107f0038">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header class="masthead text-center text-white" style="margin-top: -18%;">
        <div class="masthead-content">
            <div class="container">

                <h2 class="masthead-heading mb-0" >Trending Projects</h2>
                <div>  
                    <div class="container">

                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3 col-lg-6" style="border-style:solid; height:70%">
                                    <h2 class="text-center"> @Html.DisplayFor(modelItem => item.Title)</h2>
                                    <img src="~/img/01.jpg" width="100%" height="50%">
                                    <br />
                                    <br />
                                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                    <label class="text-dark" style="font-weight:800">Category: </label><span style="font-weight:600"> @Html.DisplayFor(modelItem => item.Category)</span>
                                    <br />
                                    <label class="text-dark" style="font-weight:800">Country: </label><span style="font-weight:600"> @Html.DisplayFor(modelItem => item.Country)</span>
                                    <br />
                                    <label class="text-dark" style="font-weight:800">Current Funds: </label><span style="font-weight:600"> @Html.DisplayFor(modelItem => item.CurrentFunds)</span>
                                    <br />
                                    <label class="text-dark" style="font-weight:800">Required Funds: </label><span style="font-weight:600"> @Html.DisplayFor(modelItem => item.RequiredFunds)</span>
                                    <br />
                                    <label class="text-dark" style="font-weight:800">Estimated Date: </label>
                                    <br />
                                    <span style="font-weight:600;"> @Html.DisplayFor(modelItem => item.Deadline)</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </header>

    <main>
        <section>
            <h1 class="masthead-heading text-center mb-1">Categories</h1>
            <div class="container ">
                <div style="background-color: #2c2727;color: rgb(243,245,247);">
                    <ul class="nav nav-tabs align-center" style="color: rgb(158,169,180);">
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-1" style="color: rgb(221,214,217);"> Music </a>
                        </li>
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-2" style="color: rgb(221,214,217);">Films </a>
                        </li>
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-3" style="color: rgb(238,232,235);">Games</a>
                        </li>
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-3" style="color: rgb(238,232,235);">Publishing</a>
                        </li>
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-3" style="color: rgb(238,232,235);">Design & Tech</a>
                        </li>
                        <li class="nav-item col-sm-2 text-center">
                            <a class="nav-link" role="tab" data-toggle="tab" href="#tab-3" style="color: rgb(238,232,235);">Web App</a>
                        </li>
                    </ul>

                </div>
            </div>
        </section>

        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-sm-6 order-sm-2">
                        <div class="p-5"><img class="rounded-circle img-fluid" src="/img/03.jpg"></div>
                    </div>
                    <div class="col-sm-6 order-sm-1">
                        <div class="p-5">
                            <h2 class="display-4">You Are the Best Creator!</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quod aliquid, mollitia odio veniam sit iste esse assumenda amet aperiam exercitationem, ea animi blanditiis recusandae! Ratione voluptatum molestiae adipisci, beatae obcaecati.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>